<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 22rem;">
    <h2 class="text-center mb-3">Login</h2>

    <%= form_with url: sessions_path, method: :post, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.label :identifier, "Email ou Matrícula", class: "form-label" %>
        <%= f.text_field :identifier, class: "form-control", placeholder: "Digite seu email ou matrícula", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Senha", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Digite sua senha", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Entrar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p>Não tem uma conta? <%= link_to "Cadastre-se", new_session_path %></p>
    </div>
  </div>
</div>
